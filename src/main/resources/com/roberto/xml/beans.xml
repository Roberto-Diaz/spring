<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


<bean id="persona" class="com.roberto.beans.Persona">
<constructor-arg index="0" value="1"></constructor-arg>
<constructor-arg index="2" value="Imparable"> </constructor-arg>
<constructor-arg index="1" value="Roberto"></constructor-arg>


</bean>


<bean id="mundo" class="com.roberto.beans.Mundo">
	<property name="saludo" value="Hola mundo!">	</property>
</bean>


</beans>
